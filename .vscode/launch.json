    "version": "0.2.0",
    "configurations": [
        {
            "name": "BURF",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "encrypt",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/delphi",
            "args": ["encrypt", "<", "${workspaceFolder}/testdata/bitter-frost.pem"]
        },
        {
            "name": "assert",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/delphi",
            "args": ["assert", "<", "${workspaceFolder}/testdata/bitter-frost.pem"]
        },
        {
            "name": "unwrap",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "console": "externalTerminal",
            "cwd": "${workspaceFolder}",
            "program": "cmd/delphi",
            "args": ["unwrap", "<", "testdata/*.pem"]
        },
        {
            "name": "decrypt",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/delphi",
            "args": ["decrypt","./testdata/fortune2.pem", "<", "${workspaceFolder}/testdata/priv1.bin)"]
        },
        {
            "name": "pub",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/delphi",
            "args": ["--priv", "${workspaceFolder}/testdata/priv1.bin", "pub"]
        }
    ]
}